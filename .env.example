# Database
DATABASE_URL=mysql://user:password@localhost:3306/elevare_db

# OAuth
OAUTH_SERVER_URL=https://oauth.manus.im
VITE_APP_ID=your_app_id
OWNER_OPEN_ID=your_owner_open_id

# JWT (MÍNIMO 32 CARACTERES!)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_required

# Encryption Key (MÍNIMO 32 CARACTERES!)
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters_required

# Stripe (Monetização)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PRO_PRICE_ID=price_your_pro_price_id
STRIPE_PRO_PLUS_PRICE_ID=price_your_pro_plus_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Forge API (para LLM e Image Generation)
BUILT_IN_FORGE_API_URL=https://api.forge.manus.im
BUILT_IN_FORGE_API_KEY=your_forge_api_key

# Environment
NODE_ENV=development
PORT=3000

# Feature toggles (adapters)
USE_FEATURES_LOGGER=false
USE_FEATURES_EMAIL=false

# Email providers (opcionais; usados se ativar features email)
EMAIL_FROM=Elevare <noreply@elevare.app>
EMAIL_FROM_NAME=Elevare
SENDGRID_API_KEY=your_sendgrid_key
RESEND_API_KEY=your_resend_key

# CORS (adicione suas origens permitidas, separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== MONITORAMENTO ====================
# Sentry (Error Tracking & Performance Monitoring)
# Obter em: https://sentry.io
SENTRY_DSN=https://your_sentry_key@sentry.io/project_id

# Datadog (alternativa ao Sentry)
DATADOG_API_KEY=your_datadog_api_key

# APP Version para tracking
APP_VERSION=1.0.0

# ==========================================
# NOTAS IMPORTANTES:
# ==========================================
# 1. JWT_SECRET deve ter NO MÍNIMO 32 caracteres
# 2. ENCRYPTION_KEY deve ter NO MÍNIMO 32 caracteres
# 3. Em produção, todas as variáveis são obrigatórias
# 4. STRIPE_WEBHOOK_SECRET obtido em: https://dashboard.stripe.com/webhooks
# 5. Para testar webhooks localmente: stripe listen --forward-to localhost:3000/api/stripe/webhook
# 6. ALLOWED_ORIGINS: adicione apenas domínios confiáveis
# 7. SENTRY_DSN: Deixe vazio para desativar error tracking
# 8. Para staging, copie .env.staging e preencha com valores de staging

